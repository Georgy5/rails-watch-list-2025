<div class="container">
  <h1><%= @list.name %></h1>

  <div>
    <h2>Movies:</h2>
    <% @list.bookmarks.each do |bookmark| %>
      <%= bookmark.comment %> <%= bookmark.movie.title %><br>
    <% end %>
  </div>

  <p>
    <%= link_to 'New Bookmark', new_list_bookmark_path(@list) %>
  </p>

  <hr>

  <%= link_to 'Back', root_path %>
</div>
